<h1>Create New Figure</h1>

<form action="/figures" method="post">
    <label>Name: <input type="text" id="figure_name" name="figure[name]" /></label><br>

    <h4>Titles</h4>
    <% @titles.each do |title| %>
        <label><%= title.name %>
            <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" />
        </label>
    <% end %><br><br>

    <h4>Create New Title</h4>
    <label>
        <input type="text" id="new_title" name="title[name]" />
    </label><br><br>

    <h4>Landmarks</h4>
    <% @landmarks.each do |landmark| %>
        <label><%= landmark.name %>
            <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" />
        </label>
    <% end %><br><br>

    <h4>Create New Landmark</h4>
    <label>Name: <input type="text" id="new_landmark" name="landmark[name]" /></label>
    <label>Year: <input type="text" name="landmark[year_completed]" /></label><br>

    <input type="submit" value="Create New Figure" />
</form>

<a class="button" href="/figures">View Figures</a>
<a class="button" href="/landmarks">View Landmarks</a>
<a class="button" href="/">Home</a>