<% @figures.each do |figure| %>
    <h1><a href="/figures/<%= figure.id %>"><%= figure.name %></a></h1>

    <h2>Titles</h2>
    <ul>
        <% figure.titles.each do |title| %>
            <li><%= title.name %></li>
        <% end %>
    </ul><br>
<% end %><br>

<a class="button" href="figures/new">Create New Figure</a>
